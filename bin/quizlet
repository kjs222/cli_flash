#!/usr/bin/env ruby

require_relative "../lib/quizlet"

begin
  QuizletCLI.start(ARGV)
  # Quizlet::Application.new(ARGV).run
rescue Errno::ENOENT => err
  abort "quizlet: #{err.message}"
rescue OptionParser::InvalidOption => err
  abort "quizlet: #{err.message}\nusage: quizlet [-bns] [file ...]"
end
